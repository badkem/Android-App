<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/quiz_bg"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/mAppNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="FIND IT"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/mUserNameEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mAppNameTV"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:alpha="0.7"
            android:background="@android:color/white"
            android:hint="Plz enter your name here"
            android:padding="8dp"
            tools:ignore="Autofill,TextFields" />

        <Button
            android:id="@+id/mStartQuizBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSchoolEdt"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="#F44336"
            android:text="LET'S GO"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</RelativeLayout>