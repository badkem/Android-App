<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intr_anhtraiyeuquai">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="413dp"
                android:layout_height="103dp"
                android:scaleType="centerCrop"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bglogo" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="215dp"
                android:layout_height="258dp"
                android:layout_marginTop="34dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="255dp"
                    app:srcCompat="@drawable/anhtraiyeuquai" />

            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="194dp"
                android:layout_height="266dp"
                android:layout_marginTop="24dp"
                android:background="@color/tranparentBlack"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tableLayout"
                app:layout_constraintTop_toBottomOf="@+id/imageView10">

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ANH TRAI YÊU QUÁI"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Đạo diễn: Vũ Ngọc Phượng"
                        android:textColor="@color/colorWhite"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Quốc gia: Việt Nam"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="182dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Thời lượng: 110 phút"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Phân loại: Khán giả 13 tuổi trở lên"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Khởi chiếu: 2019-11-29"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="325dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/tranparentBlack"
                    android:text="NỘI DUNG"
                    android:textAlignment="center"
                    android:textColor="#FF0000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ndanhtraiyeuquai"
                    android:textColor="@color/colorBlack"
                    android:textSize="17dp" />

                <Button
                    android:id="@+id/btdatve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlack"
                    android:text="ĐẶT VÉ"
                    android:textColor="#FA0303"
                    android:textSize="30sp" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>